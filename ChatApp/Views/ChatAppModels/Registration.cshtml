@model ChatApp.Models.RegistrationModel

@{
    ViewData["Title"] = "Create";
}

<h1>Registracija</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Registration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="korisnik_korisnicko_ime" class="control-label">Korisnicko ime:</label>
                <input asp-for="korisnik_korisnicko_ime" class="form-control" />
                <span asp-validation-for="korisnik_korisnicko_ime" class="text-danger"></span>
                <p>@Html.DisplayFor(model => model.ErrorMessage)</p>
            </div>
            <div class="form-group">
                <label asp-for="korisnik_email" class="control-label">Email:</label>
                <input asp-for="korisnik_email" type="email" class="form-control" />
                <span asp-validation-for="korisnik_email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="korisnik_sifra" class="control-label">Lozinka:</label>
                <input asp-for="korisnik_sifra" type="password" class="form-control" />
                <span asp-validation-for="korisnik_sifra" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Registruj se" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
